pipeline {
        agent any
        stages {
            stage('Build') {
                agent {
                    docker {
                        image 'node:18-alpine'
                        reuseNode true
                    }
                }
                steps {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                    '''
                }
            }
            stage('Test') {
                steps {
                    echo 'Test Stage'
                    sh 'test -f workspace/learn-jenkins-app/index.html'
                }
            }
            
        }
}