pipeline {
        agent any
        stages {
            stage('Build') {
                agent {
                    docker {
                        image 'node:18-alpine'
                        reuseNode true
                    }
                }
                steps {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                    '''
                }
            }
            stage('Test') {
                agent {
                    docker {
                        steps {
                            echo 'Test Stage'
                            sh 'test -f build/index.html'
                        }
                    }
                }
            }
        }
            
}
