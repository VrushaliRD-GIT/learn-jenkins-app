            stage('Test') {
                agent {
                    docker {
                        image 'node:18-alpine'
                        reuseNode true
                    }
                }
                    steps {
                        echo 'Test Stage'
                        sh '''
                            #test -f build/index.html
                            npm test
                        '''
                    }
            }
                    
                
        }

        stage('e2e') {
                agent {
                    docker {
                        image 'mcr.microsoft.com/playwright:v1.58.2-noble'
                        reuseNode true
                    }
                }
                    steps {
                        sh '''
                            npm install serve
                            /workspaces/learn-jenkins-app/node_modules/.bin/serve -s build &
                            npx playwright test
                        '''
                    }
            }
                    
                
        }
        post {
            always {
                junit 'test-results/junit.xml'
            }
}

            



