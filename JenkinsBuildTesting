pipeline {
        agent any
         tools {
            nodejs "NodeJS 14"
        }
        stages {
            stage('Build') {
                agent {
                    docker {
                        image 'node:18-alpine'
                        reuseNode true
                    }
                }
                steps {
                    sh '''
                        ls -la
                        node --version
                        npm --version
                        npm ci
                        npm run build
                        npm install
                        ls -la
                    '''
                }
            }
            stage('Test') {
                    steps {
                        echo 'Test Stage'
                        sh 'test -f build/robots.txt'
                        sh 'npm test -- --grep="Disallow"'
                    }
            }
                    
                
        }
}
            



